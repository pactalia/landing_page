<section class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="text-3xl sm:text-4xl font-inter font-bold mb-4">
        ¿Cómo funciona?
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
        Proceso simple y seguro en 5 pasos
      </p>
      <div class="flex justify-center gap-4 mb-8">
        <button
          class="px-6 py-2 rounded-full transition-all duration-300 perspective-btn"
          data-perspective="buyer">
          Comprador
        </button>
        <button
          class="px-6 py-2 rounded-full transition-all duration-300 perspective-btn"
          data-perspective="seller">
          Vendedor
        </button>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8" id="stepsContainer">
      {buyerSteps.map((step, index) => (
        <div class="flex flex-col items-center text-center group">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors duration-300">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={step.icon}></path>
            </svg>
          </div>
          <h3 class="text-xl font-inter font-semibold mb-2">{step.title}</h3>
          <p class="text-gray-600 dark:text-gray-300">{step.description}</p>
          {index < 4 && (
            <svg class="w-8 h-8 text-gray-300 dark:text-gray-600 mt-4 rotate-90 md:rotate-0 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .perspective-btn {
    @apply bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200;
  }
  .perspective-btn.active {
    @apply bg-primary text-white;
  }
</style>

<script define:vars={{ buyerSteps, sellerSteps }}>
  let currentPerspective = 'buyer';
  const buttons = document.querySelectorAll('.perspective-btn');
  const stepsContainer = document.getElementById('stepsContainer');

  function updateSteps(perspective) {
    const steps = perspective === 'buyer' ? buyerSteps : sellerSteps;
    const elements = stepsContainer.children;
    
    for (let i = 0; i < steps.length; i++) {
      const step = elements[i];
      const titleEl = step.querySelector('h3');
      const descEl = step.querySelector('p');
      const iconPath = step.querySelector('svg path');
      
      // Add fade-out class
      titleEl.classList.add('opacity-0');
      descEl.classList.add('opacity-0');
      
      // Update content after brief delay
      setTimeout(() => {
        titleEl.textContent = steps[i].title;
        descEl.textContent = steps[i].description;
        iconPath.setAttribute('d', steps[i].icon);
        titleEl.classList.remove('opacity-0');
        descEl.classList.remove('opacity-0');
      }, 150);
    }
  }

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const perspective = btn.dataset.perspective;
      if (perspective === currentPerspective) return;
      
      buttons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentPerspective = perspective;
      updateSteps(perspective);
    });
  });

  // Set initial active state
  buttons[0].classList.add('active');
</script>